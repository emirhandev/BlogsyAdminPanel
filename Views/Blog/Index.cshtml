@model IEnumerable<AdminBlog.Models.Blog>
@{
    ViewData["Title"] = "Blogs";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
     
            </tr>
        </thead>
        <tbody>
            <a href="/Blog/Blog" class="btn btn-success">Add Blog</a>
            @foreach (var author in Model) {
                <tr>
                    <th scope="row">@author.Id</th>
                    <td>@author.Title</td>
                 
                    <td class="text-center">
                        @if(author.IsPublish){
                        <a class="btn btn-success" >Published</a>
                        }
                        else{
                             <a class="btn btn-light" asp-route-id="@author.Id" asp-action="Publish">Publish</a>

                        }
                         <a class="btn btn-danger" asp-route-id="@author.Id" asp-action="Delete">Delete</a>
                       
      
                    </td>
                </tr>
            }
        </tbody>
    </table>
